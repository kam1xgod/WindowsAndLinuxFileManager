<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.sun.javafx.scene.control.skin.ContextMenuContent.MenuBox?>
<?import com.sun.javafx.scene.control.skin.EmbeddedTextContextMenuContent?>
<VBox alignment="center"
      stylesheets="@mint.css"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="PanelController">
    <HBox spacing="5"
          VBox.vgrow="ALWAYS">
        <VBox spacing="5"
              HBox.hgrow="ALWAYS">
            <HBox spacing="5">
                <TextField fx:id="pathField"
                           editable="false"
                           HBox.hgrow="ALWAYS" />
                <Button onAction="#buttonUpdateClick"
                        text="Update"/>
                <Button onAction="#buttonPathBackAction"
                        text="Back" />
            </HBox>
            <TableView fx:id="filesTableView"
                       VBox.vgrow="ALWAYS">

            </TableView>
        </VBox>
        <padding>
            <Insets bottom="5.0"
                    left="5.0"
                    right="5.0"
                    top="5.0" />
        </padding>
    </HBox>

    <properties>
        <control>
            <fx:reference source="controller"/>
        </control>
    </properties>
</VBox>
