<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DriveSelectionController" spacing="5">
    <Button text="Drive Selection:"
            focusTraversable="false"
            maxWidth="Infinity"/>
    <ListView fx:id="drivesListView"
              VBox.vgrow="ALWAYS"/>
    <HBox spacing="8.0">
        <Button text="Go to"
                fx:id="gotoButton"
                focusTraversable="false"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Update"
                fx:id="updateDrivesButton"
                focusTraversable="false"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
    </HBox>

    <padding>
        <Insets top="5"/>
    </padding>

    <properties>
        <driveControl>
            <fx:reference source="controller"/>
        </driveControl>
    </properties>

</VBox>
